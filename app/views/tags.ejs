<!--  Include headers here -->
<%- include('partials/header') %>

<main class="container py-4">

  <h1>Thèmes</h1>

  <div>

    <% tags.forEach(tag => { %>
      <span class="badge bg-primary p-2 mb-1"><%= tag.name %></span>

      <!-- Si j'ai des quiz dans mon tag -->
      <% if (tag.quizzes.length) { %>
        <ul>
          <% tag.quizzes.forEach(quiz => { %>
            <li><a href="/quiz/<%= quiz.id %>"><%= quiz.title %></a></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="ms-2">Aucun quizz dans ce thème pour le moment....</p>
      <% } %>
    <% }) %>
  </div>

</main>

<!--  Include footers here -->
<%- include('partials/footer') %>
